<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>
    <entity name="App\Domain\Entity\Item" table="items">
        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Symfony\Bridge\Doctrine\IdGenerator\UuidV4Generator" />
        </id>

        <field name="created" type="datetime_immutable">
            <gedmo:timestampable on="create" field="updated" />
        </field>
        <field name="updated" type="datetime_immutable">
            <gedmo:timestampable on="update" field="updated"/>
        </field>

        <field name="isPurchased" type="boolean" length="255"/>
        <field name="ordering" type="integer" length="255"/>
        <field name="value" type="integer" length="255"/>

        <many-to-one field="template" target-entity="App\Domain\Entity\Template" fetch="EXTRA_LAZY"/>
        <many-to-one field="list" target-entity="App\Domain\Entity\ShoppingList" inversed-by="items" fetch="EXTRA_LAZY"/>
        <many-to-one field="unit" target-entity="App\Domain\Entity\Unit" inversed-by="unit" fetch="EXTRA_LAZY"/>
        <one-to-many field="labels" target-entity="App\Domain\Entity\Label" mapped-by="item" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <one-to-many field="geoPoints" target-entity="App\Domain\Entity\GeoPoint" mapped-by="item" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <one-to-many field="images" target-entity="App\Domain\Entity\ItemImage" mapped-by="item" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersist" />
            <lifecycle-callback type="preUpdate" method="onPreUpdate" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
